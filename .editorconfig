root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation
[*.{js,json},.babelrc,.eslintrc]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# 4 space indentation
[*.css]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# tab indentation
[*.html]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
